generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id BigInt @id @default(autoincrement())
  email String @unique
  name String
  provider_id String
  files File[]
}

model File {
  id BigInt @id @default(autoincrement())
  file_id String @unique
  name String
  userId BigInt
  user User @relation(fields: [userId], references: [id])
}